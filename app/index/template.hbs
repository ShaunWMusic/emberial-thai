      <div class="grid__item">
        <div class="grid__item--max-half">
          <h3 class="title">Your Order</h3>
          <div class="card">
            <h2 class="card__header">cart</h2>
            {{#each modal as |cart|}}
            <p>{{ cart }}</p>

            {{/each}}
          </div>
        </div>
      </div>
    </div>
</div>
