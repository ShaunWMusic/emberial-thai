<div class="container">
<div class="body-content">
  <div class="grid">
      {{log model }}
      {{#each model as |project|}}
      <div class="grid__item" >
        {{log project }}
      <div class="grid__item--max-half">
        <h3 class="title">Menu</h3>
          <div class="card">
        <h2 class="card__header">{{ project.name }}</h2>

        {{#each project.menuItems as |value|}}
        {{log value }}
          <div class="card__content">
            <p class="card__content--name">{{ value.name }}</p>
            <p class="card__content--description">{{ value.description }}</p>
            <div class="card__content--price">
              <p>{{ value.price }}</p>
            </div>
            <span class="btn">Order</span>
          </div>
        {{/each}}

        </div>
      </div>
        </div>
      {{/each}}
    </div>
