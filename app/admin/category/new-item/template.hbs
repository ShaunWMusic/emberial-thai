<div class="card card-new--category">
  <h2 class="card__header card-new--category__header  card-new--category__input">New Menu Item for Appetizers</h2>
  {{#simple-form onsubmit=(action "submit") as |formValues|}}
    <p>
      <label>Name</label>
    </p>
    <p>
    <p>{{input value=formValues.name}}</p>
    </p>
    <p>
      <label>Price</label>
    </p>
    <p>
    <p>{{input value=formValues.price}}</p>
    </p>
    <p>
      <label>Description</label>
    </p>
    <p>
    <p>{{input value=formValues.description}}</p>
    </p>
    <p class="new-category__btn">
    {{#link-to "admin.category.index" class="btn"}}Back{{/link-to}}
    <button>Save</button>
    </p>
  {{/simple-form}}
</div>
